{
  "manifest_version": 3,
  "name": "Supabase React Extension",
  "version": "1.0.0",
  "description": "A Chrome Extension built with React, Tailwind, and Supabase.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "background": {
    "service_worker": "assets/background.js"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://grcsxpvyyxmrzpplwwur.supabase.co https://api.openai.com;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "modal.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}