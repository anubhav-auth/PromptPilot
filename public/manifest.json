{
  "manifest_version": 3,
  "name": "PromptPilot - AI Writer",
  "version": "1.0.0",
  "description": "Improve your writing and prompts anywhere on the web.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "background": {
    "service_worker": "assets/background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "commands": {
    "open-prompt-pilot": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open PromptPilot on the focused input"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.openai.com;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "modal.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}